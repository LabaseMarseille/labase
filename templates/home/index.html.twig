{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    <h1>Accueil</h1>
    <ul>
        <li><a href="https://getbootstrap.com/docs/5.2/" target="_blanck">Bootsdsstrap 5.2.3</a></li>
        <li><a href="https://icons.getbootstrap.com/" target="_blanck">Icones Bootstrap 1.10.3</a></li>
    </ul>
    {% if app.user %}
        <p>Bonjour {{ app.user.username }}, vous êtes connecté</p>
        Mes rôles :
        <ul>
            {% for role in app.user.roles %}
                <li>{{ role }}</li>
            {% endfor %}
        </ul>
        Mes attributs :
        <ul>
            {% for key, attribute in app.user.attributes %}
                <li>
                    {{ key }} :
                    {% if attribute is  iterable %}
                        Array
                    {% else %}
                        {{ attribute }}
                    {% endif %}
                </li>
            {% endfor %}
        </ul>

    {% else %}
        <p>Vous n'êtes pas connecté</p>
    {% endif %}
{% endblock %}
