                <th>Datedebut</th>
                <td>{{ recurrent.datedebut ? recurrent.datedebut|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Datefin</th>
                <td>{{ recurrent.datefin ? recurrent.datefin|date('Y-m-d H:i:s') : '' }}</td>
