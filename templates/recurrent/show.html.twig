{% block body %}
    <h1>Recurrent</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ recurrent.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ recurrent.titre }}</td>
            </tr>
            <tr>
                <th>Personnepresente</th>
                <td>{{ recurrent.personnepresente }}</td>
            </tr>
            <tr>
                <th>Nbpersonne</th>
                <td>{{ recurrent.nbpersonne }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ recurrent.email }}</td>
            </tr>
            <tr>
                <th>Autrebesoin</th>
                <td>{{ recurrent.autrebesoin }}</td>
            </tr>
            <tr>
                <th>Gratuit</th>
