{% extends 'base.html.twig' %}

{% block title %}Salle{% endblock %}

{% block body %}
    <div class="card text-center">
        <div class="card-header">
            <h1>Gestion des salles</h1>
        </div>
        <div class="card-body">
            <table id="table" data-toggle="table" data-search="true" data-pagination="true" data-click-to-select="true">
                <thead>
                <tr>
                    <th>Libelle</th>
                    <th>capacite</th>
                    <th>Cloture</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for salle in salles %}
                    <tr>
                        <td>{{ salle.libelle }}</td>
                        <td>{{ salle.capacite }}</td>
                        <td>{{ salle.cloture ? 'Oui' : 'Non' }}</td>
                        <td>
                            <a class="btn btn-primary" href="{{ path('app_salle_edit', {'id': salle.id}) }}">Modifier</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="1">Pas d'enregistrements existants</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <a class="btn btn-primary" href="{{ path('app_salle_new') }}">Création</a>
            <a class="btn btn-info" href="{{ path('app_referentiel') }}">Retour référentiel</a>
        </div>
    </div>



{% endblock %}