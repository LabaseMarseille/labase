{% extends 'base.html.twig' %}

{% block title %}Besoin{% endblock %}

{% block body %}
    <div class="card text-center">
        <div class="card-header">
            <h1>Gestion des couleurs</h1>
        </div>
        <div class="card-body">
            <table id="table" data-toggle="table" data-search="true" data-pagination="true" data-click-to-select="true">
                <thead>
                <tr>
                    <th>Libelle</th>
                    <th>Couleur</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for couleur in couleurs %}
                    <tr>
                        <td>{{ couleur.libelle }}</td>
                        <td>{{ couleur.couleur }}</td>
                        <td>
                            <a class="btn btn-primary" href="{{ path('app_couleur_edit', {'id': couleur.id}) }}">Modifier</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="1">Pas d'enregistrements existants</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <a class="btn btn-primary" href="{{ path('app_couleur_new') }}">Création</a>
            <a class="btn btn-info" href="{{ path('app_referentiel') }}">Retour référentiel</a>
        </div>
    </div>



{% endblock %}
