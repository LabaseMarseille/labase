{% extends 'base.html.twig' %}

{% block title %}Besoin{% endblock %}

{% block body %}
    <div class="card text-center">
        <div class="card-header">
            <h1>Gestion des besoins</h1>
        </div>
        <div class="card-body">
            <table id="table" data-toggle="table" data-search="true" data-pagination="true" data-click-to-select="true">
                <thead>
                <tr>
                    <th>Libelle</th>
                    <th>Nombre</th>
                    <th>Cloture</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for besoin in besoins %}
                    <tr>
                        <td>{{ besoin.libelle }}</td>
                        <td>{{ besoin.nombre }}</td>
                        <td>{{ besoin.cloture ? 'Oui' : 'Non' }}</td>
                        <td>
                            <a class="btn btn-primary" href="{{ path('app_besoin_edit', {'id': besoin.id}) }}">Modifier</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="1">Pas d'enregistrements existants</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <a class="btn btn-primary" href="{{ path('app_besoin_new') }}">Création</a>
            <a class="btn btn-info" href="{{ path('app_referentiel') }}">Retour référentiel</a>
        </div>
    </div>



{% endblock %}
